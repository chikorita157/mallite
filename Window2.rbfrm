w HTTPSocket		      dim data as string		      socket1.yield=true		      app.loginenc = EncodeBase64(TextField1.text + ":" + TextField2.text)		      socket1.setrequestheader "Authorization","Basic " + app.loginenc		      data = socket1.Get("http://mal-api.com/account/verify_credentials",10)		      If socket1.httpstatuscode = 200 then		        // login is a success		        // Store Password and Username		        app.memusername = TextField1.text		        app.mempassword = TextField2.text		        Prefs.StringUsername = app.memusername		        // Remember Password Setting		        Prefs.BooleanRememberPassword = checkbox1.value		        Prefs.booleanautologin= autologin.value		        Window1.show		        Window2.close		      Else		        // if login fails		        app.errboxshow("Login failed!","Incorrect Username or Password. Check your Username and Password.")		        ProgressWheel1.visible = false		        Loginstatus.text = "Fail: Incorrect Password or Username..."		        app.loginenc = ""		      end if		    end if		  end if		End Sub	#tag EndEvent#tag EndEvents#tag Events PushButton2	#tag Event		Sub Action()		  quit		End Sub	#tag EndEvent#tag EndEvents#tag Events StaticText5	#tag Event		Function MouseDown(X As Integer, Y As Integer) As Boolean		  ShowURL "http://myanimelist.net/register.php"		  		End Function	#tag EndEvent#tag EndEvents#tag Events Autologin	#tag Event		Sub Open()		  me.value = booleanautologin		  		End Sub	#tag EndEvent#tag EndEvents